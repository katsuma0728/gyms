<div class = "container">
  <div class = "row p-2 mt-5">
    <div class = "col-4 mt-5">
      <%= image_tag @user.get_profile_image(250,250), class: "rounded-circle" %>
      <div class = "mt-3">
        <% if (current_user.present? && @user.id == current_user.id) || (current_admin.present? && current_admin.email == 'admin@example.com') %>
           <%= link_to edit_user_path(@user.id) do %>
                <i class="fas fa-user-cog fa-lg mx-3" style ="color: #006400;"></i>
           <% end %>
           <%= link_to schedules_path do %>
                <i class="far fa-calendar-plus fa-lg" style ="color: #006400;"></i>
           <% end %>
        <% end %>
      </div>
      <div class="card mt-3" style="width: 80%;">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">ユーザー名： <%= @user.name %></li>
          <li class="list-group-item">年齢： <%= @user.age %></li>
          <li class="list-group-item">性別： <%= @user.sex %></li>
          <li class="list-group-item">目標：<%= @user.introduction %></li>
        </ul>
      </div>
    </div>
    <div class = "col-8 mt-5">
      <%= month_calendar events: @schedules do |date, schedules| %>
        <%= date.day %>
        <% schedules.each do |schedule| %>
          <div>
            <%= link_to schedule_path(schedule.id) do %>
            <!--truncate文字数制限-->
              <%= schedule.title.truncate(8) %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


