<div class = "container p-5">
  <div class = "row">
    <div class = "col-9 offset-2">
      <% if @activities.present? %>
        <% @activities.each do |activity| %>
          <div class="row ralert alert-light p-2 mb-2" role="alert">
            <div class = "col-1">
              <%= image_tag activity.subject.user.get_profile_image(50,50), class: "rounded-circle" %>
            </div>
            <div class = "col-7">
                <%= link_to read_activity_path(activity.id), method: :patch do %>
                  <%= activity.subject.name %>さんがあなたの<%= activity.action_type_i18n %>!</span>
                <% end %>
            </div>
            <div class = "col-4">
              <p class = "text-right" style="font-size: 0.8em;"><%= l activity.created_at, format: :long %></p>
            </div>
          </div>
          <%= paginate @activities %>
        <% end %>
      <% else %>
        <div class="alert alert-danger" role="alert">
          <h3>通知はありません。</h3>
        </div>
      <% end %>
    </div>
  </div>
</div>

