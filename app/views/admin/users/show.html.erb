<div class = "container">
  <div class = "row p-2 mt-5">
    <div class = "col-md-4 text-center mt-5">
      <%= image_tag @user.get_profile_image(250,250), class: "rounded-circle" %>
      <div class = "mt-3 text-right pr-5">
         <%= link_to edit_admin_user_path(@user.id) do %>
              <i class="fas fa-user-cog fa-lg" style ="color: #006400;"></i>
         <% end %>
      </div>
      <div class="card mt-3 text-left">
        <ul class="list-group list-group-flush">
          <li class ="list-group-item">ステータス： <%= @user.is_deleted ? '退会': '有効' %></li>
          <li class ="list-group-item">ユーザーID： <%= @user.id %></li>
          <li class="list-group-item">ユーザー名： <%= @user.name %></li>
          <li class="list-group-item">年齢： <%= @user.age %></li>
          <li class="list-group-item">性別： <%= @user.sex %></li>
          <li class="list-group-item">目標：<%= @user.introduction %></li>
        </ul>
      </div>
    </div>
    <div class = "col-md-8 mt-5">
      <%= month_calendar events: @schedules do |date, schedules| %>
        <%= date.day %>
        <% schedules.each do |schedule| %>
          <div style="font-size: 0.8em;">
            <%= link_to admin_schedule_path(schedule.id) do %>
            <!--truncate文字数制限-->
              <%= schedule.title.truncate(8) %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>