<h2>管理者会員詳細画面</h2>

<table>
  <tr>
    <td>ID</td>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <td>ユーザー名</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>年齢</td>
    <td><%= @user.birth_date %></td>
  </tr>
  <tr>
    <td>性別</td>
    <td><%= @user.sex %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td>アカウントステータス</td>
    <td><%= @user.is_deleted ? '停止' : '有効' %></td>
  </tr>
</table>

<%= link_to "編集", edit_admin_user_path(@user.id) %>
