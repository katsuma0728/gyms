<h2>ユーザー一覧</h2>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>プロフィール画像</th>
      <th>ユーザー名</th>
      <th>性別</th>
      <th>年齢</th>
      <th>アカウントステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= link_to user.name, admin_user_path(user.id) %></td>
        <td><%= user.sex %></td>
        <td><%= user.birth_date %></td>
        <td><%= user.is_deleted ? '退会': '有効' %></td>
      </tr>
    <% end %>
  </tbody>
</table>