<h2>管理者ユーザー編集画面</h2>

<h5>ID</h5>
<p><%= @user.id %></p>

<%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
  <h5>ユーザー名</h5>
  <%= f.text_field :name %>

  <h5>生年月日</h5>
  <%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>

  <h5>性別</h5>
  <%= f.select :sex, User.sexes.keys.to_a, { include_blank: '選択してください'} %>

  <h5>メールアドレス</h5>
  <%= f.text_field :email %>

  <h5>アカウントステータス</h5>
  <%= f.radio_button :is_deleted, :true %><%= f.label :is_deleted, '停止' %>
  <%= f.radio_button :is_deleted, :false %><%= f.label :is_deleted, '有効' %>

  <%= f.submit "変更" %>
<% end %>
