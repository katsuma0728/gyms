<div class = "container">
  <div class="row mt-5">
    <div class="col-md-7 offset-md-3">
      <%= render "admin/shared/error_messages", resource: @user %>
      <div class = "row">
        <div class = "col-4">ユーザーID</div>
        <div class = "col-4"><%= @user.id %></div>
      </div>
      <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
        <div class = "mt-5 mb-3">
          <label>プロフィール画像</label>
          <%= f.file_field :profile_image, accept: "profile_image/*", class: "form-control-file" %>
        </div>
        <div class="mb-3">
          <label>ユーザーネーム</label>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class = "mb-3">
          <label>生年月日</label>
          <%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), class: "form-control" %>
        </div>
        <div class = "mb-3">
          <label>性別</label>
          <%= f.select :sex , User.sexes_i18n.keys.to_a, { include_blank: '選択してください'}, class: "form-control" %>
        </div>
        <div class = "mb-3">
          <label>目標</label>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="mb-3">
          <label>メールアドレス</label>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <label>アカウントステータス</label>
          <div>
            <%= f.radio_button :is_deleted, :true %><%= f.label :is_deleted, '停止' %>
            <%= f.radio_button :is_deleted, :false %><%= f.label :is_deleted, '有効' %>
          </div>
        </div>
        <div class="mb-3">
          <%= f.submit "保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
