<div class="container">
  <div class="row no-gutters">
    <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h3 class="text-dark bg-light py-4 mb-0">管理者ログイン</h3>
      <div class="form-body p-4">
        <div class="mx-auto text-center mb-3">
          <h5>メールアドレスと<br>パスワードを入力してください。</h5>
        </div>
        <%= form_with model: @admin, url: admin_session_path do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "inputEmail", placeholder: "メールアドレス" %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: "パスワード" %>
          </div>
          <div class="row">
            <div class = "col-6 offset-3 mt-2">
              <%= f.submit "ログイン", class: "btn btn-lg btn-block btn-info" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>
