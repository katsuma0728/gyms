<% if post_blog.liked_by?(current_user) %>
  <span class = "icon">
    <%= link_to post_blog_likes_path(post_blog), method: :delete, remote: true, class: "link_edit" do %>
      <%= post_blog.likes.count %><i class="fas fa-thumbs-up mx-1"></i>
    <% end %>
  </span>
<% else %>
  <span class = "icon">
    <%= link_to post_blog_likes_path(post_blog), method: :post, remote: true, class: "link_edit" do %>
      <%= post_blog.likes.count %><i class="far fa-thumbs-up mx-1"></i>
    <% end %>
  </span>
<% end %>