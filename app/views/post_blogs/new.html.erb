<h1>新規投稿</h1>

<div class = "new_post">
  <%= form_with model: @post_blog, url: post_blogs_path, method: :post do |f| %>
    <h4>投稿画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>タイトル</h4>
      <%= f.text_field :title %>
    <h4>投稿内容</h4>
      <%= f.text_area :blog %>
    <h4>タグ付け</h4>
    <p><%= f.text_field :name %></p>
    <h4>公開・下書き</h4>
      <%= f.select :status, PostBlog.statuses.keys.to_a %>
    <%= f.submit '投稿' %>
  <% end %>
</div>
