<% if post_blogs.count != 0 %>
  <% post_blogs.each do |post_blog| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <%= image_tag post_blog.get_image(200,200), class: "card-img-top" %>
      <div class="card-body">
        <div class = "row">
          <div class = "col-4">
            <div class = "row mx-1">
              <% if current_user.present? %>
                <%= link_to user_path(post_blog.user.id) do %>
                  <%= image_tag post_blog.user.get_profile_image(50,50), class: "rounded-circle" %>
                <% end %>
              <% elsif current_admin.present? %>
                  <%= link_to admin_user_path(post_blog.user.id) do %>
                    <%= image_tag post_blog.user.get_profile_image(50,50), class: "rounded-circle" %>
                  <% end %>
              <% else %>
                  <%= image_tag post_blog.user.get_profile_image(50,50), class: "rounded-circle" %>
              <% end %>
            </div>
            <div class = "row mt-1 mx-2">
              <% if current_user.present? %>
                <%= link_to user_path(post_blog.user.id) do %>
                  <%= post_blog.user.name %>
                <% end %>
              <% elsif current_admin.present? %>
                  <%= link_to admin_user_path(post_blog.user.id) do %>
                    <%= post_blog.user.name %>
                  <% end %>
              <% else %>
                 <%= post_blog.user.name %>
              <% end %>
            </div>
          </div>
          <div class = "col-8">
            <h5 class = "card-title">
              <% if post_blog.published? %>
                <%= link_to post_blog_path(post_blog.id) do %>
                  <%= post_blog.title %>
                <% end %>
              <% else %>
                <%= link_to edit_post_blog_path(post_blog.id) do %>
                  <%= post_blog.title %>
                <% end %>
              <% end %>
            </h5>
            <p class = "card-text">
              <%= post_blog.blog %><%#= post_blog.tags.map(&:name).join('#') %>
              <% post_blog.tags.each do |tag| %>
                <%# if tag.post_blogs.status == 1 %>
                  <%= link_to search_tag_post_blogs_path(tag_id: tag.id) do %>
                    <div class = "d-inline-flex bg-secondary rounded-pill m-1 p-1">
                      <span class = "text-white">#<%= tag.name %><%= "(#{tag.post_blogs.published.count})" %></span>
                    </div>
                  <% end %>
                <%# else %>
                  <!--<div class = "d-inline-flex bg-secondary rounded-pill m-1 p-1">-->
                  <!--  <span class = "text-white">#<%= tag.name %><%= "(#{tag.post_blogs.published.count})" %></span>-->
                  <!--</div>-->
                <%# end %>
              <% end %>
            </p>
            <p class = "text-right">
              <%= post_blog.likes.count %><i class="fas fa-thumbs-up mx-1"></i>
              <% if post_blog.published? %>
                <%= link_to "#{post_blog.post_comments.count} 件のコメント", post_blog_path(post_blog.id) %>
              <% else %>
                <%= link_to "#{post_blog.post_comments.count} 件のコメント", edit_post_blog_path(post_blog.id) %>
                <%= link_to post_blog_path(post_blog.id), method: :delete do %>
                  <i class="fas fa-trash-alt mx-2"></i>
                <% end %>
              <% end %>
            </p>
            <p class = "text-right">
              <%= "#{l post_blog.created_at, format: :long}に投稿" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<%else%>
  <div class = "container">
    <div class = "row">
      <div class = "col-6 offset-4">
        <h5>投稿はありません！</h5>
        <% if current_user.present? %>
          <h5><i class = "far fa-file-alt fa-2x mx-2"></i>から投稿してみよう！</h5>
        <% elsif current_admin.present? %>
          <%= link_to admin_users_path do %>
            <h5>ユーザー管理へ</h5>
          <% end %>
        <% else %>
          <h5>新規登録またはログインして投稿しよう！</h5>
        <% end %>
      </div>
    </div>
  </div>
<%end%>
<div class = "pagination mt-5">
  <%= paginate post_blogs %>
</div>
